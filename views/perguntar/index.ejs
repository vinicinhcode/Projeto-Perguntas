<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./../partials/header-scripts') %>
</head>
<body>
    
    <%- include('./../partials/navbar') %>


    <div class="container" style="margin-top: 5vh;">
        <div class="card">
            <div class="card-header">
                <h3>Faça sua pergunta</h3>
            </div>

            <div class="card-body">
                <form action="/perguntar" method="post">
                    <label for="title">Título</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Título"><br>
                    <label for="description">Sua pergunta</label>
                    <textarea id="description" name="description" class="form-control" cols="30" rows="10" placeholder="Escreva sua pergunta aqui.."></textarea>
                    <br>
                    <button class="btn btn-dark">Enviar</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('./../partials/footer-scripts') %>

</body>
</html>